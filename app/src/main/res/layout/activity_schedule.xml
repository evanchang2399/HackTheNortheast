<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/goBackBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/go_back"
                android:textAlignment="center"
                android:textColor="@color/colorGradient5"
                android:background="@color/colorGradient4"
                />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Today"
                android:textColor="@color/colorGradient5"
                android:textSize="56sp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent" />

            <TextView
                android:id="@+id/message1"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginTop="20dp"
                android:text="Best times to run today"
                android:textColor="@color/colorGradient5"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@+id/message2"
                app:layout_constraintTop_toBottomOf="@+id/message2" />

            <ListView
                android:id="@+id/dailyList"
                android:layout_width="fill_parent"
                android:layout_height="156dp"
                android:drawSelectorOnTop="false" />

            <TextView
                android:id="@+id/message2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/message_two"
                android:textSize="24sp"
                android:textColor="@color/colorGradient5"
                app:layout_constraintStart_toStartOf="@+id/message3"
                app:layout_constraintTop_toBottomOf="@+id/message3" />

            <TextView
                android:id="@+id/message3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/message_three"
                android:textSize="24sp"
                android:textColor="@color/colorGradient5"
                app:layout_constraintStart_toStartOf="@+id/tempTitle"
                app:layout_constraintTop_toBottomOf="@+id/tempTitle" />

            <TextView
                android:id="@+id/tempTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="64dp"
                android:text="Temperature"
                android:textSize="24sp"
                android:textColor="@color/colorGradient5"
                app:layout_constraintEnd_toEndOf="@+id/currentTemp"
                app:layout_constraintTop_toBottomOf="@+id/currentTemp" />

            <TextView
                android:id="@+id/currentTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/current_temp"
                android:textSize="24sp"
                android:textColor="@color/colorGradient5"
                app:layout_constraintStart_toEndOf="@+id/humidTitle"
                app:layout_constraintTop_toBottomOf="@+id/humidTitle" />

            <TextView
                android:id="@+id/humidTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="Humidity"
                android:textSize="24sp"
                android:textColor="@color/colorGradient5"
                app:layout_constraintStart_toStartOf="@+id/currentHumid"
                app:layout_constraintTop_toBottomOf="@+id/currentHumid" />

            <TextView
                android:id="@+id/currentHumid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/current_humidity"
                android:textSize="24sp"
                android:textColor="@color/colorGradient5"
                app:layout_constraintStart_toEndOf="@+id/precipitationTitle"
                app:layout_constraintTop_toBottomOf="@+id/precipitationTitle" />

            <TextView
                android:id="@+id/precipitationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="Precipitation"
                android:textSize="24sp"
                android:textColor="@color/colorGradient5"
                app:layout_constraintEnd_toStartOf="@+id/currentPrecipitation" />


            <TextView
                android:id="@+id/currentPrecipitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/current_precipitation"
                android:textSize="24sp"
                android:textColor="@color/colorGradient5"
                app:layout_constraintStart_toStartOf="@+id/dayOne"
                app:layout_constraintTop_toBottomOf="@+id/dayOne" />


            <TextView
                android:id="@+id/dayOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:text="@string/day_one"
                android:textSize="36sp"
                android:textColor="@color/colorGradient5"
                app:layout_constraintStart_toStartOf="@+id/dayTwo"
                app:layout_constraintTop_toBottomOf="@+id/dayTwo" />

            <TextView
                android:id="@+id/dayTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:text="@string/day_two"
                android:textSize="36sp"
                android:textColor="@color/colorGradient5"
                app:layout_constraintStart_toStartOf="@+id/dayThree"
                app:layout_constraintTop_toBottomOf="@+id/dayThree" />

            <TextView
                android:id="@+id/dayThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:text="@string/day_three"
                android:textSize="36sp"
                android:textColor="@color/colorGradient5"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>